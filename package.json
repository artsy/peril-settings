{
  "name": "artsy-danger",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/peril-settings",
  "author": "Orta Therox <orta@artsymail.com>",
  "license": "MIT",
  "scripts": {
    "precommit": "lint-staged",
    "type-check": "tsc  --noEmit"
  },
  "dependencies": {
    "@graphql-inspector/core": "^1.27.0",
    "@types/graphql": "^14.0.3",
    "graphql-schema-utils": "^0.6.5",
    "graphql-tools": "^4.0.3",
    "lodash": "^4.17.21",
    "node-fetch": "^2.2.0"
  },
  "devDependencies": {
    "@slack/client": "^4.8.0",
    "@types/jest": "^23.3.9",
    "@types/jira-client": "^6.4.0",
    "@types/lodash": "^4.14.121",
    "@types/node": "^14.6.4",
    "@types/node-fetch": "^2.1.3",
    "danger": "^7.0.9",
    "danger-plugin-spellcheck": "^1.2.3",
    "danger-plugin-yarn": "^1.3.0",
    "github-webhook-event-types": "^1.2.1",
    "husky": "^0.14.3",
    "jest": "^26.4.2",
    "jira-client": "^6.4.1",
    "lint-staged": "^7.2.2",
    "prettier": "^2.1.1",
    "ts-jest": "^26.3.0",
    "ts-node": "^7.0.1",
    "typescript": "3.4.1"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(.test)\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn prettier --write",
      "git add"
    ],
    "*.test.@(ts|tsx)": [
      "jest"
    ],
    "*.json": [
      "yarn prettier --write",
      "git add"
    ],
    "*.md": [
      "yarn prettier --write",
      "git add"
    ]
  }
}
